<div class="survey_content">
  <h2><%= @survey.name %></h2>


  <div id="question_container">
    <% @completed_survey.survey.questions.each do |question| %> 


    <div id="single_question_<%= question.id %>" >
      <input type="hidden" id="question_id<%= question.id %>" name="question_id<%= question.id %>" value="<%= question.id %>">
      <h4><%= question.title %> </h4>
        <ul class="option_list">
          <% question.choices.each do |choice| %>
            <li><input type="radio" name="choice_id_<%= choice.id %>" value="<%= choice.id %>">&nbsp;<%= choice.option %></li>
          <% end %>
        </ul>

    </div>

    <% end %>
  </div>  
   <input id="question_submit" type="button" value="Submit">
</div>
  







 